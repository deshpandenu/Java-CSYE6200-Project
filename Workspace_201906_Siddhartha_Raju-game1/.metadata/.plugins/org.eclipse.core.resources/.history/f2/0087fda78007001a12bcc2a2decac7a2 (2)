package edu.neu.csye6200;

import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;

public class KeyInput extends KeyAdapter{
	
	private Handler handler;
	
	public KeyInput(Handler handler)
	{
		this.handler = handler;
	}
	
	public void keyPressed(KeyEvent e)
	{
		int key = e.getKeyCode();
		//System.out.println(key);
		for (GameObject gameobj : handler.object) {
			if(gameobj.getId() == ID.Player)
			{
				
				if(key==KeyEvent.VK_W) gameobj.setVelY(-5);
				if(key==KeyEvent.VK_S) gameobj.setVelY(5);
				if(key==KeyEvent.VK_A) gameobj.setVelx(5);
				if(key==KeyEvent.VK_D) gameobj.setVelx(-5);
				
			}
			
		}
	}
	
	public void keyReleased(KeyEvent e)
	{
		int key = e.getKeyCode();
		//System.out.println(key);
		
		for (GameObject gameobj : handler.object) {
			if(gameobj.getId() == ID.Player)
			{
				
				if(key==KeyEvent.VK_W) gameobj.setVelY(0);
				if(key==KeyEvent.VK_S) gameobj.setVelY(0);
				if(key==KeyEvent.VK_A) gameobj.setVelx(0);
				if(key==KeyEvent.VK_D) gameobj.setVelx(0);
				
			}
			
		}
	}

}
