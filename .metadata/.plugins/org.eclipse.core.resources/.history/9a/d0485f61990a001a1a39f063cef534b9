package edu.neu.csye6200;

public class Spawn {
	
	private Handler handler;
	private HUD hud;
	private int score = 0;
	
	public Spawn(Handler handler, HUD hud)
	{
		this.handler = handler;
		this.hud = hud;
	}
	
	public void tick()
	{
		score++;
		
		if(score>=1000)
		{
			score=0;
			hud.setLevel((hud.getLevel())+1);
		}
	}

}
